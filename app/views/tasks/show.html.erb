    $('#btn-add-document').on('click', function(e) {
        e.preventDefault()
        var form = $('#add-document')
        var action = form.attr('action') //necessary?
        var d_id = form.serialize()

        $.ajax({url: `/users/${user_id}/tasks/${task_id}/add_document`, 
