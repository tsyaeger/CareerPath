
<style>

.show-container {
    padding: 0 35px;
}

.heading-container {
    margin: 0;
    padding: 0;
    text-align: center;
}

h1#task-title {
    margin: 5px;
}

#task-description {
    padding-bottom: 10px;
}

#task-description-container {
    margin: 0;
    padding: 0;
    text-align: center;
}

#contact-info-section > div {
    margin: 0 15px;
}

#completed-container {
    padding-bottom: 20px;
    border-bottom: solid black 1px;
}

#completed-section {
  display: flex;
  justify-content: center;
}

#completed-section > div {
    margin: 0 15px;
}

