<h1>Documents</h1>

<table>
  <tr>
    <th>Type</th>
    <th>Description</th>
    <th></th>
    <th></th>
  </tr>

  <% @documents.each do |document| %>
	  <tr>
	    <td><%= link_to document.description, document_path(document) %></td>
	    <td>document</td>

	    <td><%= link_to "Edit", edit_document_path(document) %></td>
	    <td><%= link_to "Delete", document_path(document), :method => :delete %></td>
	  </tr>
  <% end %>

</table>

	
