
<div id='new-job-form'>

    <%= form_for [@job.user, @job] do |f| %>

        <div id="small-fields">

            <div class="field">
                <%= f.label :company, "Company Name" %><br>
                <%= f.text_field :company, id: "company", :required => true  %>
            </div>

            <div class="field">
                <%= f.label :position %><br>
                <%= f.text_field :position, id: "position", :required => true  %>
            </div>

            <div class="field">
                <%= f.label :url, "Link to Posting" %><br>
                <%= f.text_field :url, id: "url" %>
            </div>            

            <div class="field" id="job-posted-date-field">
                <%= f.label :date_posted %><br>
                <%= f.date_field :date_posted, id: "date_posted" %>
            </div> 

            <div class="actions">
                <%= f.submit "SAVE" %>
            </div>

        </div> <!-- close small-fields -->

        <div id="large-fields">           

            <div class="field job-desc">
                <%= f.label :job_desc, "Job Description" %><br>
                <%= f.text_area :job_desc, id: "job_desc"%>
            </div>            

            <div class="field co-desc">
                <%= f.label :co_desc, "Company Notes" %><br>
                <%= f.text_area :co_desc, id: "co_desc" %>
            </div>
            <br>

        </div> <!-- close small-fields -->

    <% end %>

</div> <!-- close form -->