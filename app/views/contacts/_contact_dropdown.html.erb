	

<%= form_for @job, :url => job_path(@job), :html => {:id => "add-contact", :class => "link-field", :method => :patch} do |f| %>

	<p><%= f.collection_select :contact_ids, @job.user.contacts, :id, :last_name, {:include_blank => 'choose contact'} %></p>	

	<%= f.submit "Link Contact", {id: 'btn-add-contact'} %>

<% end %>

